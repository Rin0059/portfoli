<header>
  <div class ="header-top">
    <%= link_to root_path, class:"header-title" do %>
      <div>Liquors</div>
    <% end %>

    <div clas ="nav">
      <ul class="lists-right">
        <% if user_signed_in? %>

          <!--userがログインしている時 -->
          <li class="nav-item"><%= link_to "My Page", users_user_path(current_user), class: 'nav-link' %></li>
          <li class="nav-item ml-1"><%= link_to "Liquors", users_liquors_path, class: 'nav-link' %></li>
          <!--<li class="nav-item ml-1"><%#= link_to "Review", users_liquor_liquor_comments_path, class: 'nav-link ' %></li>-->
          <li class="nav-item ml-1"><%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'nav-link' %></li>

        <% elsif admin_signed_in? %>

          <!-- 管理者がログインしている時 -->
          <li class="nav-item"><%= link_to "Liquors", admins_liquors_path, class: 'nav-link' %></li>
          <li class="nav-item ml-1"><%= link_to "Users", admins_users_path, class: 'nav-link' %></li>
          <li class="nav-item ml-1"><%= link_to "Genres", admins_genres_path, class: 'nav-link' %></li>
          <li class="nav-item ml-1"><%= link_to "Log Out", destroy_admin_session_path, method: :delete, class: 'nav-link' %></li>

        <% else %>

          <!-- ログインしていない時 -->
          <li class="nav-item"><%= link_to "About", users_about_path, class: 'nav-link' %></li>
          <li class="nav-item ml-1"><%= link_to "Liquors", users_liquors_path, class: 'nav-link' %></li>
          <li class="nav-item ml-1"><%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %></li>
          <li class="nav-item ml-1"><%= link_to "Log In", new_user_session_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>