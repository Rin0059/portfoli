<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-4">
      <h4>ログイン</h4>
      <p>会員の方はこちらからログイン</p>

    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|%>
      <div class="row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", size: "40" %>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        </label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "current_password ", size: "40" %>
        </div>
      </div><br>

      <div class="row">
        <div class="col-md-6 offset-md-1">
          <div class="actions text-center">
            <%= f.submit "ログイン", class: "btn btn-sm btn-primary col-lg-2 ml-5 px-0" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-8">
          <p class="ml-4 mb-3 bg-light d-inline-flex">登録がお済でない方</p>
        </div>
        <div class="col-md-7 mt-2 ml-4">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "こちら", new_registration_path(resource_name), class:"ml-5" %>
            <p class="d-lg-inline">から新規登録を行ってください。</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>