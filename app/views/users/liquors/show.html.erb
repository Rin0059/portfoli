<div class="container">

  <div class="row mt-5 mb-5">
    <div class="col-md-6 text-center mb-5">
      <%= attachment_image_tag @liquor, :image %>
    </div>
    <div class="col-md-6 px-5">
      <div class="row">
        <h1><%= @liquor.name %></h1>
      </div>
      <div class="row mt-3 mb-5">
        <p style='line-height:2rem'>
          <%= @liquor.detail %>
        </p>
      </div>
       <%= render 'favorites/favorite-btn', liquor: @liquor %>
        <td>
          <td><%= link_to "#{@liquor.liquor_comments.count} コメント", liquor_path(@liquor.id) %></td>
            <% if current_user == @user %>
            <!--星評価-->
            <td>
              <div id="star-rate-<%= @liquor.id %>"></div>
              <script>
              $('#star-rate-<%= @li.id %>').raty({
                size: 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                readOnly: true,
                half: false,
                score: <%= @liquor.star %>,
              });
              </script>
            </td>
            <!--星評価-->
            
    </div>
  </div>
</div>