<div class="container">

  <div class="row mt-5">
    <div class="col-md-4 text-center mb-3">
      <%= attachment_image_tag @liquor, :image, size: '310x300' %>
      <%# if current_user == @user %>
        <!--星評価-->
        <td>
          <div id="rate-<%= @liquor.id %>"></div>
          <script>
            $('#rate-<%= @liquor.id %>').raty({
              size: 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              readOnly: true,
              half: true,
              score: <%= @liquor.rate %>,
            });
          </script>
        </td>
        <!--星評価-->
      <%# end %>
      <%= link_to @liquor.user.name, users_user_path(@user) %>
    </div>

    <div class="col-md-8 px-5">
      <div class="row">
        <h2><%= @liquor.name %></h2>
      </div>

      <div class="row mt-3 mb-5">
        <p style='line-height:2rem'>
          <%= @liquor.detail %>
        </p>
      </div>

      <div class="row mt-3 mb-5">
        <p style='line-height:2rem'>
          <%= @liquor.genre.name %>
        </p>
      </div>
    </div>
    <%= render 'users/liquors/show', liquor: @liquor %>
  </div>
</div>