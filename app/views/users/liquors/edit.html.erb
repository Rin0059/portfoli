<div class='container'>
  <div class='row'>
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>お酒編集</h2>
    <%= form_with model: @liquor, url: users_liquor_path(@liquor), local:true do |f| %>
      <table class='table'>
      <tr>
     	 <th>画像</th>
     	 <th><%= f.attachment_field :image %></th>
      </tr>
      <tr>
     	 <th>銘柄</th>
     	 <th><%= f.text_field :name %></th>
      </tr>
      <tr>
     	 <th>お酒說明</th>
     	 <th><%= f.text_area :detail %></th>
      </tr>
      <tr>
     	 <th>ジャンル</th>
     	 <th><%= f.collection_select :genre_id, Genre.all, :id, :name %></th>
      </tr>
      <tr>
       <th>評価</th>

       <th>
         <div id="star">
           <%= f.hidden_field :rate, id: :rate %>
         </div>
       </th>
       <script>
        $('#star').raty({
          size: 20,
          starOff:  '<%= asset_path('star-off.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          scoreName: 'liquor[rate]',
          half: true,
        });
       </script>
      </tr>
      </table>
      <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
     <% end %>
  </div>
 </div>
</div>