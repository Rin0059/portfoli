<div class ="container">
  <div class = "row">
    <div class = "col-md-12">
      <h2 class="site-title mb-3">お酒一覧</h2>
    </div>

    <!--新規登録画面へ-->
    <p class = "text-right">
      <%= link_to new_users_liquor_path, class:"btn btn-info" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </p>

    <table class="table">
          <thead>
            <tr>
              <th>画像</th>
              <th>銘柄</th>
              <th>説明</th>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
          <% @liquors.each do |liquor| %>
            <tr>
                <td><%= attachment_image_tag liquor, :image, class:'img' %></td>
                <td><%= link_to liquor.name, users_liquor_path(liquor.id) %></td>
                <td><%= liquor.detail %></td>
                <td><%= liquor.genre.name %></td>
                <td class="favorite-btn-<%= liquor.id %>">
                   <%= render 'favorites/favorite-btn', liquor: liquor %>
                </td>
                <td><%= link_to "#{liquor.liquor_comments.count} コメント", users_liquor_path(liquor.id) %></td></td>
            </tr>
          <% end %>
          </tbody>
        </table>

    <div class="paginate">
      <%= paginate @liquors %>
    </div>
  </div>
</div>