<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">
     <h2 class='my-3 py-3'><%= @user.name%>さんの会員情報編集</h2>
      <%= form_with model:@user, url: admins_user_path(@user), local:true do |f| %>

        <div class="form-group row my-3">
         <div class="col-sm-4"><label>会員ID</label></div>
         <div class="col-sm-4"><%= @user.id%></div>
         <div class="col-sm-4"></div>
        </div>

        <div class="form-group row my-3">
         <div class="col-sm-4"><label>氏名</label></div>
         <div class="col-sm-4"><%= f.text_field :name,  class: 'form-control' %></div>
        </div>

        <div class="form-group row my-3">
         <div class="col-sm-4"><label>メールアドレス</label></div>
         <div class="col-sm-4"><%= f.text_field :email,  class: 'form-control' %></div>
         <div class="col-sm-4"></div>
        </div>

        <div class="form-group row my-3">
          <div class="col-sm-4"><label>会員ステータス</label></div>
          <div class="col-sm-4">
            <div class="radio-inline">
             <%= f.radio_button :user_status, :true %>
             <%= f.label :有効, class: "user_status_label" %>
          </div>
        </div>

          <div class="col-sm-4">
           <div class="radio-inline">
           <%= f.radio_button :user_status, :false %>
           <%= f.label :退会, class: "user_status_label" %>
           </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4"></div>
          <div class="col-sm-4"><%= f.submit "変更を保存", class: 'btn btn-success' %></div>
          <div class="col-sm-4"><img src="/assets/IMG_9623.JPG" alt="" class='container-fluid mb-5'></div>
        </div>
      <% end %>
  </div>
</div>