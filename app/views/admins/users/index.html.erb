<div class='container'>
 <div class='row'>
  <div class='col-9 '>
   <h2 class = 'my-3 py-3"'>会員一覧</h2>
    <table class='table mb-5'>
     <thead>
      <tr>
       <th>会員ID</th>
       <th>氏名</th>
       <th>メールアドレス</th>
       <th>ステータス</th>
      </tr>
     </thead>
     <tbody>
      <% @users.each do |user| %>
       <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admins_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.user_status %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
    <%= paginate @users%>
   </div>
  </div>
</div>