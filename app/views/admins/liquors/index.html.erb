<div class = "container">
    <div class = "row">
      <div class = "col-md-12">
        <h4 class="pb-3">お酒一覧</h4>

        <!--新規登録画面へ-->
        <p class = "text-right">
          <%= link_to new_admins_liquor_path, class:"btn btn-info" do %>
           <i class="fas fa-plus"></i>
          <% end %>
        </p>

        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>画像</th>
              <th>銘柄</th>
              <th>説明文</th>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
          <% @liquors.each do |liquor| %>
            <tr>
                <td><%= liquor.id %></td>
                <td><%= attachment_image_tag liquor, :image, class:'img' %></td>
                <td><%= link_to liquor.name, admins_liquor_path(liquor.id) %></td>
                <td><%= liquor.detail %></td>
                <td><%= liquor.genre.name %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <%= paginate @liquors %>
      </div>
    </div>
  </div>