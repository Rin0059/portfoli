<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="mt-3">Create Genre</h2>
        <%= form_with model: @genre, url: admins_genre_path, local:true do |f| %>
          <div class="form-group mt-5">
            <label for="name">Name</label>
              <%= f.text_field :name, placeholder:"#{@genre.name}" %>
          </div>

           <div class="form-group mt-5">
       	    <label for="image">image</label>
       	      <%= f.attachment_field :image %>
       	  </div>

          <div class="form-group mt-5">
              <%= f.submit "登録", class: "btn btn-sm btn-success" %>  <%= link_to '削除', admins_genre_path(@genre), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_genre_#{@genre.id}" %>
          </div>
      <% end %>
    </div>
  </div>
</div